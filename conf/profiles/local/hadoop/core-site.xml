<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <!-- Default filesystem -->
  <property>
    <name>fs.defaultFS</name>
    <value>hdfs://localhost:9000</value>
  </property>

  <!-- Hadoop temp directory -->
  <property>
    <name>hadoop.tmp.dir</name>
    <value>/Users/${user.name}/data/local/hadoop/tmp</value>
  </property>

  <!-- Allow local HiveServer2 user to proxy as local users (for doAs) -->
  <property>
    <name>hadoop.proxyuser.daniel.hosts</name>
    <value>*</value>
  </property>
  <property>
    <name>hadoop.proxyuser.daniel.groups</name>
    <value>*</value>
  </property>
</configuration>
