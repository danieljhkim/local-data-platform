<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <!-- Default filesystem -->
  <property>
    <name>fs.defaultFS</name>
    <value>hdfs://localhost:8020</value>
  </property>

  <!-- Hadoop temp directory (keep all state under BASE_DIR) -->
  <property>
    <name>hadoop.tmp.dir</name>
    <value>{{BASE_DIR}}/state/hadoop/tmp</value>
  </property>

  <!-- Disable Hadoop security (local dev only) -->
  <property>
    <name>hadoop.security.authentication</name>
    <value>simple</value>
  </property>
  <property>
    <name>hadoop.security.authorization</name>
    <value>false</value>
  </property>

  <!-- Force IPC to use simple auth (no SASL) -->
  <property>
    <name>ipc.client.fallback-to-simple-auth-allowed</name>
    <value>true</value>
  </property>
</configuration>


