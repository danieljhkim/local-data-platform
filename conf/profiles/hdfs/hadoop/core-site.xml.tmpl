<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <!-- Default filesystem -->
  <property>
    <name>fs.defaultFS</name>
    <value>hdfs://localhost:8020</value>
  </property>

  <!-- Hadoop temp directory (keep all state under BASE_DIR) -->
  <property>
    <name>hadoop.tmp.dir</name>
    <value>{{BASE_DIR}}/state/hadoop/tmp</value>
  </property>
</configuration>


