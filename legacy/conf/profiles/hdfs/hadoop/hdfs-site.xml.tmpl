<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <!-- Single-node dev cluster -->
  <property>
    <name>dfs.replication</name>
    <value>1</value>
  </property>

  <!-- Explicit RPC address to avoid port drift across distros -->
  <property>
    <name>dfs.namenode.rpc-address</name>
    <value>localhost:8020</value>
  </property>

  <!-- NameNode storage (keep all state under BASE_DIR) -->
  <property>
    <name>dfs.namenode.name.dir</name>
    <value>file:{{BASE_DIR}}/state/hdfs/namenode</value>
  </property>

  <!-- DataNode storage (keep all state under BASE_DIR) -->
  <property>
    <name>dfs.datanode.data.dir</name>
    <value>file:{{BASE_DIR}}/state/hdfs/datanode</value>
  </property>
</configuration>


