#!/usr/bin/env bash
set -euo pipefail

# Convenience wrapper for running YARN CLI commands against the local-data
# managed Hadoop environment (config overlay, env vars, etc).
#
# Usage:
#   yarn-b application -list
#   yarn-b logs -applicationId <appId>

script_dir="$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" && pwd)"
local_data="$script_dir/local-data"

exec "$local_data" env exec -- yarn "$@"
